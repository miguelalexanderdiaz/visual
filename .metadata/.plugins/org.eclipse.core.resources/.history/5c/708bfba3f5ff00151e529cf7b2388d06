package processing;

import processing.core.PApplet;
import processing.core.PImage;
import processing.core.PShape;
import processing.opengl.PShader;
import remixlab.proscene.Scene;

/**
 *
 * @author Estudiante
 */
public class Clase extends PApplet
{
    private Scene scene;
    PShader shader;
    PImage img;
    float offset;
    
    @Override
    public void settings()
    {
	size(640, 480, P3D);
    }
    
    @Override
    public void setup()
    {
        scene = new Scene(this);
        shader= loadShader("frag2.glsl", "vertex1.glsl");
        img= loadImage("Image.jpg");
    }
    
    @Override
    public void draw()
    {
        background(0);
        beginShape(QUAD);
        shader(shader);
        shader.set("offset", offset);
        offset+=0.1;
        
        texture(img);
        img.resize(100, 100);
////        fill(0,0,0);
        vertex(0,0,0,0);
////        fill(255,0,0);
        vertex(0,100,100,0);
////        fill(0,255,0);
        vertex(100,100,100,100);
////        fill(0,0,255);
        vertex(100,0,0,100);
        endShape();
    }
    
    public static void main(String args[])
    {
        PApplet.main(Clase.class.getName());
    }
}
